{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist",
    "moduleResolution": "node",
    "outDir": "./dist",
    "module": "esnext",
    "target": "es2018",
    "removeComments": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true
  },

  "include": ["./src/**/*.ts"],
  "lib": [
    "esnext",
    "dom",
    "es2017"
  ],
  "paths": {
    "@/*": ["src/*"],
  }
}